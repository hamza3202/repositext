# File patterns

file_pattern :convert_folio_xml_to_at do
  File.join(Dir.getwd, "import_folio/**/*.xml")
end

file_pattern :convert_idml_to_at do
  File.join(Dir.getwd, "import_idml/**/*.idml")
end

# Parsers

parser :folio, 'Kramdown::Parser::Folio'
parser :idml,  'Kramdown::Parser::Idml'
