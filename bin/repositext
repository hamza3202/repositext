#!/usr/bin/env ruby
# -*- encoding: utf-8 -*-

require 'kramdown/document'
require 'repositext/parser/repositext'
require 'repositext/kramdown_adaptions'

puts Kramdown::Document.new(
  ARGF.read,
  {
    :input => :repositext,
    :disable_gap_mark => true,
    :disable_subtitle_mark => true,
    :disable_record_mark =>true
  }
).to_html
