# Convert kramdown to HTML
#
# Reads the filename provided and converts it from kramdown to html.
#
# Use like so:
#     bundle exec kramdown_to_html a_file.at
#
require 'repositext-kramdown'

puts Kramdown::Document.new(
  ARGF.read,
  {
    :input => :repositext,
    :disable_gap_mark => true,
    :disable_subtitle_mark => true,
    :disable_record_mark =>true
  }
).to_html
