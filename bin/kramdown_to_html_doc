#!/usr/bin/env ruby
# Convert kramdown to HTML
#
# This script converts all kramdown files that match the given Dir.glob pattern and
# writes the corresponding HTML files in the same directory as the kramdown
# source files, each with unchanged base name and extension changed to '.html'.
#
# Use like so:
#     bundle exec kramdown_to_html_doc '../kramdown_docs/*.at'
#
require 'repositext-kramdown'
require 'repositext/cli/converter_html_doc'

begin
  cli = Repositext::Cli::ConverterHtmlDoc.new(ARGV)
  cli.run
rescue => e
  STDERR.puts e.message
  STDERR.puts e.backtrace.join("\n")
  exit 1
end
